<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp"
		android:background="#FFFFFF"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<Button
			android:id="@+id/main"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="8dp"
			android:background="#274595"
			android:text="اللغة"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"/>
		<Button
			android:id="@+id/update"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="8dp"
			android:background="#F8CA00"
			android:text="تحديث التطبيق"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#000000"/>
		<Button
			android:id="@+id/share"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="8dp"
			android:background="#0E1D44"
			android:text="مشاركة التطبيق"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"/>
		<Button
			android:id="@+id/about"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="8dp"
			android:background="#490A3D"
			android:text="المعلومات عنا"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"/>
		<Button
			android:id="@+id/apply_by_us"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="8dp"
			android:background="#8A9B0F"
			android:text="الاتصال للتسجيل"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"/>
	</LinearLayout>
</LinearLayout>
